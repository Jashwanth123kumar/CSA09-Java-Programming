package java1;
import java.util.*;
public class revnum {
  public static void main(String[] args)
  { int n,i,rev=0,rem;
    Scanner s=new Scanner(System.in);
    System.out.println("Enter the numer :");
    n=s.nextInt();
    while (n!=0)
    { rem=n%10;
      rev=rev*10+rem;
      n=n/10;
    }
    System.out.println("Reverse of number is "+rev);
  }
}
