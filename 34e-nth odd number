package java2;
import java.util.*;
public class nthoddnum {
	public static void main(String[] args) {
		Scanner s=new Scanner (System.in);
		System.out.print("Enter the Nth number : ");
		int n=s.nextInt();
		int A[]=new int[100];
		int j=1;
		System.out.print(n+"th odd number after "+n+" numbers is ");
		for (int i=1;i<100;i++)
		{ if (i%2 !=0 )
			{A[j]=i;
		    j++;}
		}
		System.out.print(A[n*2]);
	}
}
