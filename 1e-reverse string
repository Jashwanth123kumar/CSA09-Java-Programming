import java.util.Scanner;
public class rev
{
    public static void main(String[] args)
    {
        Scanner s=new Scanner(System.in);
        System.out.print("enter the word");
        String a=s.nextLine();
        String b=" ";
        int c=a.length();
        for(int i=c-1;i>=0;i--)
        {
            b=b+a.charAt(i);
        }
        System.out.print("Reverse String"+b);
        s.close();

    }
}
